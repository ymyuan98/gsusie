Package: gsusie
Type: Package
Title: Sum of Single-Effects Generalized Linear Models
Version: 0.1.0
Authors@R: 
    person("Ming", "Yuan", , emamil = "ming.yuan@stat.ubc.ca", 
            role = c("aut", "cre"))
Depends:
    R(>= 3.0.2)
